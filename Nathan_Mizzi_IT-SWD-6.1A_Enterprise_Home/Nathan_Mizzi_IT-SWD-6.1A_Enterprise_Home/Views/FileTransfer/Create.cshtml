@{
    ViewData["Title"] = "Create";
}

@if (ViewBag.Error != null)
{
<div class="alert alert-danger" role="alert">
    @ViewBag.Error
</div>}

@if (ViewBag.Message != null)
{
<div class="alert alert-primary" role="alert">
    @ViewBag.Message
</div>}

<div class="row">
    <div class="col-md-4">
        <form method="post" action="/FileTransfer/Create" enctype="multipart/form-data">
            <div class="form-group">
                <p>Email</p>
                <input name="RecipientEmail" type="email" class="form-control" />
            </div>
            <div class="form-group">
                <p>Your Email</p>
                <input name="SenderEmail" type="email" class="form-control" />
            </div>
            <div class="form-group">
                <p>Title</p>
                <input name="Title" class="form-control" />
            </div>
            <div class="form-group">
                <p>Message</p>
                <textarea name="Message" rows="5" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <p>Password</p>
                <input name="Password" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <input name="FilePath" type="file" class="form-control btn btn-primary" />
            </div>
            <div class="form-group">
                <input type="submit" value="Get A Link" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
